generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Booking {
  id            String   @id @default(cuid())
  firstName     String
  lastName      String
  email         String
  phone         String
  preferredDate DateTime?
  procedure     String?
  message       String?
  status        String   @default("PENDING")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("bookings")
}
